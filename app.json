{
  "expo": {
    "name": "NovaDoc",
    "slug": "NovaDoc",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "reflectachat",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F1E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.reflecta.chat",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow Reflecta Chat to access your microphone for voice mode",
        "NSSpeechRecognitionUsageDescription": "Allow Reflecta Chat to use speech recognition for voice mode"
      }
    },
    "android": {
      "package": "com.shahnoor.novadoc",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0F0F1E"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Reflecta Chat to access your microphone for voice mode."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "71c69596-4a6b-4e19-a22c-9050f94556b0"
      }
    }
  }
}
